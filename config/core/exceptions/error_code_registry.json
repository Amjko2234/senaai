{
  "$schema":"https://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "code": {
        "type": "string",
        "pattern": "^[A-Z]{3}-[A-Z]{2,4}-[A-Z]{2,4}-\\d{3}$"
      },
      "layer": {
        "type": "string",
        "enum": ["APP", "COR", "DOM", "INF", "SYS"]
      },
      "service": {
        "type": "string",
        "pattern": "^[A-Z]{2,4}$"
      },
      "category": {
        "type": "string",
        "enum": ["AUTH", "CFG", "IO", "LOOK", "SYS", "UNK", "VAL"]
      },
      "value": {
        "type": "number",
        "minimum": 1
      },
      "description": {
        "type": "string"
      }
    },
    "required": ["code", "layer", "service",
                 "category", "value", "description"]
  }
}
